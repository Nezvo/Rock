</style>

<script setup lang="ts">
    import TransitionVerticalCollapse from "@Obsidian/Controls/transitionVerticalCollapse.obs";
    import { createSection, useSectionWrapper } from "@Obsidian/Core/Controls/contentSection";
    import { computed, onBeforeUnmount, PropType, ref } from "vue";

    const props = defineProps({
        /**
         * The title of the section. This should be a brief, descriptive label
         * about the contents of the section.
         */
        title: {
            type: String as PropType<string>,
            required: true
        },

        /**
         * The icon to display next to the title. This is optional and can be
         * left out if no icon is desired.
         */
        icon: {
            type: String as PropType<string>,
            required: false
        },

        /**
         * Whether the section should be displayed with a light background.
         */
        light: {
            type: Boolean as PropType<boolean>,
            default: false
        }
    });

    // #region Values

    const title = computed((): string => props.title);
    const icon = computed((): string | undefined => props.icon);
    const isOverflowCollapsed = ref(true);

    const section = createSection(title, icon);
    const sectionWrapper = useSectionWrapper();

    // #endregion

    // #region Computed Values

    /**
     * Additional classes to apply to the section based on its state and
     * configuration.
     */
    const additionalSectionClasses = computed((): string[] => {
        const classes: string[] = [];

        if (section.isCollapsed.value) {
            classes.push("content-section-collapsed");
        }

        if (props.light) {
            classes.push("content-section-light");
        }

        return classes;
    });

    /**
     * Additional classes to apply to the section body overflow based on its
     * state.
     */
    const additionalSectionBodyOverflowClasses = computed((): string[] => {
        const classes: string[] = [];

        if (isOverflowCollapsed.value) {
            classes.push("content-section-body-overflow-collapsed");
        }

        return classes;
    });

    // #endregion

    // #region Event Handlers

    /**
     * Handles the click event on the section header to toggle the collapse state
     * of the section.
     *
     * @param ev The mouse event that triggered the click.
     */
    function onSectionHeaderClick(ev: MouseEvent): void {
        if (ev.target && ev.target instanceof HTMLElement && ev.target.closest(".content-section-header-actions")) {
            // If the click was on the actions, don't toggle collapse.
            return;
        }

        section.isCollapsed.value = !section.isCollapsed.value;
    }

    // #endregion

    onBeforeUnmount((): void => {
        sectionWrapper.removeSection(section);
    });

    sectionWrapper.addSection(section);
</script>
