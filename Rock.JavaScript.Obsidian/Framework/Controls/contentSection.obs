    padding: 0;
    padding-top: 0;
    padding-right: var(--spacing-large);
    padding-bottom: var(--spacing-large);
    padding-left: var(--spacing-large);
}

.contentsection-light > .contentsection-header,
.contentsection-light > .contentsection-footer {
    display: none;
}

