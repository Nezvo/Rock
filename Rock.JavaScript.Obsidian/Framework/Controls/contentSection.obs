<template>
    <div :id="section.anchor.value"
         class="content-section"
         :class="additionalSectionClasses">
        <div class="content-section-header"
             @click="onSectionHeaderClick">
            <h5 class="content-section-title">
                <i v-if="icon" :class="icon"></i>
                {{ title }}
            </h5>

            <div class="content-section-header-actions">
                <div class="content-section-header-reveal-actions">
                    <slot name="headerActions" />
                </div>

                <button type="button"
                        class="btn btn-action"
                        @click="section.isCollapsed.value = !section.isCollapsed.value">
                    <i class="ti ti-chevron-up"></i>
                </button>
            </div>
        </div>

        <TransitionVerticalCollapse>
            <div v-if="!section.isCollapsed.value">
                <div class="content-section-body">
                    <slot />
                </div>

                <div v-if="$slots.overflow"
                     class="content-section-body-overflow"
                     :class="additionalSectionBodyOverflowClasses">
                    <div class="content-section-body-overflow-toggle">
                        <button type="button"
                                class="btn btn-link"
                                @click="isOverflowCollapsed = !isOverflowCollapsed">
                            <span>Show More</span>
                            <i class="ti ti-chevron-up"></i>
                        </button>
                    </div>

                    <TransitionVerticalCollapse>
                        <div v-if="!isOverflowCollapsed" class="content-section-body-overflow-content">
                            <slot name="overflow" />
                        </div>
                    </TransitionVerticalCollapse>
                </div>

                <div v-if="$slots.footerActions || $slots.footerSecondaryActions" class="content-section-footer">
                    <div class="content-section-footer-actions">
                        <slot name="footerActions" />
                    </div>

                    <div class="content-section-footer-secondary-actions">
                        <slot name="footerSecondaryActions" />
                    </div>

                </div>
            </div>
        </TransitionVerticalCollapse>
    </div>
</template>

