<template>
    <div :id="section.anchor.value"
         class="contentsection"
         :class="additionalSectionClasses">
        <div v-if="title"
             class="contentsection-header"
             @click="onSectionHeaderClick">
            <h5 class="contentsection-header-title">
                <i v-if="icon" :class="icon"></i>
                {{ title }}
            </h5>

            <div class="contentsection-header-actions">

                <div v-if="$slots.headerSecondaryActions"
                     class="contentsection-header-reveal-actions">
                    <slot name="headerSecondaryActions" />
                </div>

                <slot name="headerActions" />

                <button v-if="!disableCollapse"
                        type="button"
                        class="btn btn-action"
                        @click="section.isCollapsed.value = !section.isCollapsed.value">
                    <i class="ti ti-chevron-up"></i>
                </button>
            </div>
        </div>

        <TransitionVerticalCollapse>
            <div v-show="disableCollapse || !section.isCollapsed.value">
                <div class="contentsection-body">
                    <slot />
                </div>

                <div v-if="$slots.overflow"
                     class="contentsection-body-overflow"
                     :class="additionalSectionBodyOverflowClasses">
                    <div class="contentsection-body-overflow-toggle">
                        <button type="button"
                                class="btn btn-link"
                                @click="isOverflowCollapsed = !isOverflowCollapsed">
                            <span>{{ overflowText || "Show More" }}</span>
                            <i class="ti ti-chevron-up"></i>
                        </button>
                    </div>

                    <TransitionVerticalCollapse>
                        <div v-show="!isOverflowCollapsed" class="contentsection-body-overflow-content">
                            <slot name="overflow" />
                        </div>
                    </TransitionVerticalCollapse>
                </div>

                <div v-if="$slots.footerActions || $slots.footerSecondaryActions" class="contentsection-footer">
                    <div class="contentsection-footer-actions">
                        <slot name="footerActions" />
                    </div>

                    <div class="contentsection-footer-secondary-actions">
                        <slot name="footerSecondaryActions" />
                    </div>

                </div>
            </div>
        </TransitionVerticalCollapse>
    </div>
</template>

<style>
