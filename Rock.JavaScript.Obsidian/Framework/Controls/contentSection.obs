}

.contentsection-header-actions .btn-action:active,
.contentsection-footer-actions .btn-action:active,
.contentsection-footer-secondary-actions .btn-action:active,
.contentsection-nav-header .btn-action:active {
    background-color: transparent;
    box-shadow: none;
}

.contentsection-header-actions .btn-action > i,
.contentsection-footer-actions .btn-action > i,
.contentsection-footer-secondary-actions .btn-action > i,
.contentsection-nav-header .btn-action > i {
    color: var(--color-interface-strong);
    align-self: center;
    font-size: var(--font-size-h5);
    padding: 0 var(--spacing-tiny);
}
</style>

<script setup lang="ts">
    import TransitionVerticalCollapse from "@Obsidian/Controls/transitionVerticalCollapse.obs";
    import { createSection, useSectionContainer } from "@Obsidian/Core/Controls/contentSection";
    import { computed, onBeforeUnmount, PropType, ref } from "vue";

    const props = defineProps({
        /**
         * The title of the section. This should be a brief, descriptive label
         * about the contents of the section.
         */
        title: {
            type: String as PropType<string>,
            required: false
        },

        /**
         * The icon to display next to the title. This is optional and can be
         * left out if no icon is desired.
         */
        icon: {
            type: String as PropType<string>,
            required: false
        },

        /**
         * Whether the section should be displayed with a light background.
         */
        light: {
            type: Boolean as PropType<boolean>,
            default: false
        },

        /**
         * A section can be collapsed by default. This will disable that so the
         * section is always expanded.
         */
        disableCollapse: {
            type: Boolean as PropType<boolean>,
            default: false
        },

        /**
         * The text to display for the button to show the overflow content.
         */
        overflowText: {
            type: String as PropType<string>,
            required: false
        },
    });

    // #region Values

    const title = computed((): string | undefined => props.title);
    const icon = computed((): string | undefined => props.icon);
    const isOverflowCollapsed = ref(true);

    const section = createSection(title, icon);
    const sectionContainer = useSectionContainer();

    // #endregion

    // #region Computed Values

    /**
     * Additional classes to apply to the section based on its state and
     * configuration.
     */
    const additionalSectionClasses = computed((): string[] => {
        const classes: string[] = [];

        if (!props.disableCollapse) {
            classes.push("contentsection-collapsible");
        }

        if (section.isCollapsed.value) {
            classes.push("contentsection-collapsed");
        }

        if (props.light) {
            classes.push("contentsection-light");
        }

        return classes;
    });

    /**
     * Additional classes to apply to the section body overflow based on its
     * state.
     */
    const additionalSectionBodyOverflowClasses = computed((): string[] => {
        const classes: string[] = [];

        if (isOverflowCollapsed.value) {
            classes.push("contentsection-body-overflow-collapsed");
        }

        return classes;
    });

    // #endregion

    // #region Event Handlers

    /**
     * Handles the click event on the section header to toggle the collapse state
     * of the section.
     *
     * @param ev The mouse event that triggered the click.
     */
    function onSectionHeaderClick(ev: MouseEvent): void {
        if (ev.target && ev.target instanceof HTMLElement && ev.target.closest(".contentsection-header-actions")) {
            // If the click was on the actions, don't toggle collapse.
            return;
        }

        section.isCollapsed.value = !section.isCollapsed.value;
    }

    // #endregion

    onBeforeUnmount((): void => {
        sectionContainer.removeSection(section);
    });

    sectionContainer.addSection(section);
</script>
