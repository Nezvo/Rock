<template>
    <Modal v-model="isVisible"
           title="Settings"
           saveText="Save"
           @save="onSave">
        <SectionHeader title="Filters" />

        <div class="row">
            <div class="col-md-3">
                <DropDownList v-model="createdBy"
                              :items="createdByItems"
                              :showBlankItem="false"
                              label="Created By" />
            </div>
            <div class="col-md-3" v-if="createdBy === 'Selected Person'">
                <PersonPicker v-model="filterPerson"
                              label="Person" />
            </div>
            <div class="col-md-6">
                <SlidingDateRangePicker v-model="createdDateRange"
                                        label="Created Date Range" />
            </div>
        </div>
    </Modal>
</template>

<script setup lang="ts">
    import PersonPicker from "@Obsidian/Controls/personPicker.obs";
    import Modal from "@Obsidian/Controls/modal.obs";
    import DropDownList from "@Obsidian/Controls/dropDownList.obs";
    import SectionHeader from "@Obsidian/Controls/sectionHeader.obs";
    import SlidingDateRangePicker from "@Obsidian/Controls/slidingDateRangePicker.obs";
    import { ref, PropType, watch } from "vue";
    import { GridSettingsOptions } from "./types.partial";
    import { useVModelPassthrough } from "@Obsidian/Utility/component";
    import { deepEqual } from "@Obsidian/Utility/util";
    import { ListItemBag } from "@Obsidian/ViewModels/Utility/listItemBag";

    const props = defineProps({
        modelValue: {
            type: Object as PropType<GridSettingsOptions>,
            required: true
        },

        visible: {
            type: Boolean as PropType<boolean>,
            required: true
        },

        currentPerson: {
            type: Object as PropType<ListItemBag>,
            required: false,
        }
    });

    const emit = defineEmits<{
        (e: "update:modelValue", value: GridSettingsOptions): void;
        (e: "update:visible", value: boolean): void;
        (e: "close"): void;
    }>();

    const createdBy = ref(props.modelValue.createdBy?.value ?? "Selected Person");
    const filterPerson = ref(props.modelValue.filterPerson);
    const createdDateRange = ref(props.modelValue.createdDateRange ?? null);

    const isVisible = useVModelPassthrough(props, "visible", emit);

    const createdByItems = <ListItemBag[]>[
        {
            text: "Not Specified",
            value: "Not Specified"
        },
        {
            text: "Selected Person",
            value: "Selected Person"
        }
    ];

    function onSave(): void {
        const value: GridSettingsOptions = {
            createdBy: { text: "", value: createdBy.value },
            filterPerson: filterPerson.value,
            createdDateRange: createdDateRange.value
        };

        if (!deepEqual(value, props.modelValue, true)) {
            emit("update:modelValue", value);
        }

        isVisible.value = false;
    }

    watch(() => props.modelValue, () => {
        createdBy.value = props.modelValue.createdBy?.value ?? "Selected Person";
        filterPerson.value = props.modelValue.filterPerson;
        createdDateRange.value = props.modelValue.createdDateRange ?? null;
    });

    watch(() => filterPerson.value, () => {
        if (!filterPerson.value) {
            createdBy.value = "Not Specified";
        }
    });

    watch(() => createdBy.value, () => {
        if (createdBy.value === "Not Specified") {
            filterPerson.value = undefined;
        }
        else if (createdBy.value === "Selected Person" && !filterPerson.value) {
            filterPerson.value = props.currentPerson;
        }
    });

    watch(isVisible, () => {
        if (!isVisible.value) {
            emit("close");
        }
    });
</script>
