<template>
    <fieldset>
        <ValueDetailList :modelValue="topValues" />

        <div class="row">
            <div class="col-md-6">
                <ValueDetailList :modelValue="leftSideValues" />
            </div>

            <div class="col-md-6">
                <ValueDetailList :modelValue="rightSideValues" />
            </div>
        </div>

        <EditSkillList v-if="props.modelValue?.idKey"
                       v-model="skills"
                       :agentKey="props.modelValue.idKey"
                       :availableSkills="props.options?.availableSkills ?? []"
                       :systemSkills="systemSkills" />
    </fieldset>
</template>

<script setup lang="ts">
    import EditSkillList from "./editSkillList.partial.obs";
    import ValueDetailList from "@Obsidian/Controls/valueDetailList.obs";
    import { computed, PropType, ref, watch } from "vue";
    import { ValueDetailListItemBuilder } from "@Obsidian/Core/Controls/valueDetailListItemBuilder";
    import { ValueDetailListItem } from "@Obsidian/Types/Controls/valueDetailListItem";
    import { AIAgentBag } from "@Obsidian/ViewModels/Blocks/AI/AIAgentDetail/aiAgentBag";
    import { AIAgentDetailOptionsBag } from "@Obsidian/ViewModels/Blocks/AI/AIAgentDetail/aiAgentDetailOptionsBag";
    import { ModelServiceRoleDescription } from "@Obsidian/Enums/AI/Agent/modelServiceRole";
    import { AgentSkillBag } from "@Obsidian/ViewModels/Blocks/AI/AIAgentDetail/agentSkillBag";
    import { AgentType, AgentTypeDescription } from "@Obsidian/Enums/AI/Agent/agentType";
    import { ListItemBag } from "@Obsidian/ViewModels/Utility/listItemBag";
    import { AudienceTypeDescription } from "@Obsidian/Enums/AI/Agent/audienceType";

    const props = defineProps({
        modelValue: {
            type: Object as PropType<AIAgentBag | null>,
            required: false
        },

        options: {
            type: Object as PropType<AIAgentDetailOptionsBag>,
            required: true
        }
    });

    // #region Values

    const skills = ref(props.modelValue?.skills as AgentSkillBag[] ?? []);

    // #endregion

    // #region Computed Values

    /** The values to display full-width at the top of the block. */
    const topValues = computed((): ValueDetailListItem[] => {
        const valueBuilder = new ValueDetailListItemBuilder();

        if (!props.modelValue) {
            return valueBuilder.build();
        }

        if (props.modelValue.description) {
            valueBuilder.addTextValue("Description", props.modelValue.description);
        }

        if (props.modelValue.instructions) {
            valueBuilder.addTextValue("Instructions", props.modelValue.instructions);
        }

        return valueBuilder.build();
    });

    /** The values to display at half-width on the left side of the block. */
    const leftSideValues = computed((): ValueDetailListItem[] => {
        const valueBuilder = new ValueDetailListItemBuilder();

        if (!props.modelValue) {
            return valueBuilder.build();
        }

        valueBuilder.addTextValue("Type", AgentTypeDescription[props.modelValue.agentType]);
        valueBuilder.addTextValue("Audience", AudienceTypeDescription[props.modelValue.audienceType]);

        return valueBuilder.build();
    });

    /** The values to display at half-width on the right side of the block. */
    const rightSideValues = computed((): ValueDetailListItem[] => {
        const valueBuilder = new ValueDetailListItemBuilder();

        if (!props.modelValue) {
            return valueBuilder.build();
        }

        if (props.modelValue.agentType === AgentType.Chat) {
            valueBuilder.addTextValue("Role", ModelServiceRoleDescription[props.modelValue.role]);
        }
        else if (props.modelValue.agentType === AgentType.Mcp) {
            if (props.modelValue.slug) {
                valueBuilder.addTextValue("Slug", props.modelValue.slug);
            }
        }

        return valueBuilder.build();
    });

    const systemSkills = computed((): ListItemBag[] => {
        if (props.modelValue?.isExcludingSystemSkills) {
            return [];
        }

        return props.options?.systemSkills ?? [];
    });

    // #endregion

    // #region Functions

    // #endregion

    // #region Event Handlers

    // #endregion

    watch(skills, () => {
        if (props.modelValue) {
            // This is a hack to get around the fact that if they edit the
            // trigger and then cancel the edit, the events would be out of
            // date.
            props.modelValue.skills = skills.value;
        }
    });
</script>
